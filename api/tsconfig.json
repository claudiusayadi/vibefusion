{
	"compilerOptions": {
		"target": "ES2022",
		"declaration": true,
		"moduleResolution": "Bundler",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": false,
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"types": ["bun", "node"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}
